# region User Configs
[user]
	name = JJ Chen
	email = 

# region URL User Overrides

# NOTE: if a repo has multiple remote matches, later entries take priority
[includeIf "hasconfig:remote.*.url:https://github.com/**"]
	path = ~/.gitconfig.d/github-com.gitconfig
[includeIf "hasconfig:remote.*.url:https://github.huit.harvard.edu/**"]
	path = ~/.gitconfig.d/github-huit-harvard-edu.gitconfig

# endregion URL User Overrides
# endregion User Configs

# region Git Credential Manager
[credential]
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
# endregion Git Credential Manager

# region Git Town
[git-town]
	offline = false
	main-branch = main
	push-new-branches = false
	sync-feature-strategy = rebase
	sync-before-ship = true
# endregion Git Town

# region Common
[core]
	editor = code -n --wait
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[alias]
	# Custom CLI graph view
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
	# Git Town aliases
	# append = town append
	# diff-parent = town diff-parent
	# hack = town hack
	# kill = town kill
	# prepend = town prepend
	# propose = town propose
	# rename-branch = town rename-branch
	# repo = town repo
	# set-parent = town set-parent
	# ship = town ship
	# sync = town sync
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[submodule]
	recurse = true
[rebase]
	autoSquash = true
# endregion Common
